<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa.enijek">
        <class>com.enigma.java_enijek.entity.MCustomer</class>
        <class>com.enigma.java_enijek.entity.MDistance</class>
        <class>com.enigma.java_enijek.entity.MDriver</class>
        <class>com.enigma.java_enijek.entity.TOrder</class>
        <class>com.enigma.java_enijek.entity.TOrderDetail</class>


        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/db_enijek" />
            <property name="jakarta.persistence.jdbc.user" value="alvindo" />
            <property name="jakarta.persistence.jdbc.password" value="24062000" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />


        </properties>


    </persistence-unit>

</persistence>